{% extends 'HWIOAuthBundle::layout.html.twig' %}

{% block hwi_oauth_content %}

    <div class="jumbotron">
        <h1>{{ 'connect.page.title' | trans({}, 'HWIOAuthBundle') }}</h1>
        <p>{{ 'connect.page.help' | trans({}, 'HWIOAuthBundle') }}</p>
        {% if error %}
            <span>{{ error }}</span>
        {% endif %}
        {% for owner in hwi_oauth_resource_owners() %}
            <p><a class="btn btn-primary btn-lg" role="button" href="{{ hwi_oauth_login_url(owner) }}">{{ owner | trans({}, 'HWIOAuthBundle') }}</a></p>
        {% endfor %}
    </div>


{% endblock hwi_oauth_content %}
