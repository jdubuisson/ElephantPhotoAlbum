{% extends 'MopaBootstrapBundle::base.html.twig' %}

 {% block head_style %}
     {% stylesheets '@ElephantWebsiteBundle/Resources/public/css/*' %}
     <link rel="stylesheet" href="{{ asset_url }}"/>
     {% endstylesheets %}

     {% stylesheets
     output='fonts/glyphicons-halflings-regular.ttf'
     'bundles/elephantwebsite/fonts/glyphicons-halflings-regular.ttf' %}{% endstylesheets %}
     {% stylesheets
     output='fonts/glyphicons-halflings-regular.eot'
     'bundles/elephantwebsite/fonts/glyphicons-halflings-regular.eot' %}{% endstylesheets %}
     {% stylesheets
     output='fonts/glyphicons-halflings-regular.svg'
     'bundles/elephantwebsite/fonts/glyphicons-halflings-regular.svg' %}{% endstylesheets %}
     {% stylesheets
     output='fonts/glyphicons-halflings-regular.woff'
     'bundles/elephantwebsite/fonts/glyphicons-halflings-regular.woff' %}{% endstylesheets %}
     {% stylesheets
     output='fonts/glyphicons-halflings-regular.woff2'
     'bundles/elephantwebsite/fonts/glyphicons-halflings-regular.woff2' %}{% endstylesheets %}
 {% endblock head_style %}

{% block foot_script_assetic %}
    {% javascripts
    '@ElephantWebsiteBundle/Resources/public/js/jquery-1.11.2.min.js'
    '@ElephantWebsiteBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock foot_script_assetic %}

{% block title %}Elephant Photo Album{% endblock title %}

{% block navbar %}
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('elephant_website_homepage') }}">Elephant Photo Album</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('elephant_website_homepage') }}">Home</a></li>
                    <li><a href="{{ path('album') }}">{{ 'elephant.album.mine' }}</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('elephant_website_about') }}">About</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>
{% endblock navbar %}

{% block body_end %}
{% endblock body_end %}


