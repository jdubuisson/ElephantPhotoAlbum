{% extends '::base.html.twig' %}

{% block container %}

    <div id="fullpage">
        {% for photo in entity.photos %}
            <div class="section">
                <div class="container">
                    <div class="row album">
                        <div class="col-md-9">
                            <img src="{{ photo.webPath }}" class="img-responsive center-block" alt="{{ photo.title }}">
                        </div>
                        <div class="col-md-3">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    {{ photo.title }}
                                </div>
                                <div class="panel-body">
                                    {{ photo.description }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="section">

            <a class="btn btn-default" href="{{ path('album') }}">
                {{ 'elephant.album.list' | trans }}
            </a>
            <a class="btn btn-default" href="{{ path('album_edit', { 'id': entity.id }) }}">
                {{ 'elephant.album.edit' | trans }}
            </a>
            {{ form(delete_form) }}

        </div>
    </div>
{% endblock %}

{% block body_end %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#fullpage').fullpage({
                navigation: true,
                scrollOverflow: true
            });
        });
    </script>
{% endblock body_end %}
